@model NetCoreWebApiPrintPDF.WebApi.Models.CertificateViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Pickleball Training Certificate</title>
    <style>
        .certificate {
            padding: 20px;
            border: 2px solid black;
            margin: 30px auto;
            max-width: 800px;
            text-align: center;

        }
    </style>
</head>
<body>
    <div class="certificate container">
        <div class="row">
            <div class="col-12">
                <h1 class="fw-bold">Pickleball Training Certificate</h1>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-6 text-start">
                <p><strong>Student Name:</strong> @Model.StudentName</p>
                <p><strong>Coach:</strong> @Model.CoachName</p>
                <p><strong>Evaluation Date:</strong> @Model.EvaluationDate.ToString("MM/dd/yyyy")</p>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Skill</th>
                            <th scope="col">Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var skill in Model.SkillGrades)
                        {
                            <tr>
                                <td>@skill.SkillName</td>
                                <td>@skill.Grade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
