@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model NetCoreWebApiPrintPDF.Domain.Entities.Certificate

@{
    var baseUrl = $"{HttpContextAccessor.HttpContext.Request.Scheme}://{HttpContextAccessor.HttpContext.Request.Host}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pickleball Certificate of Completion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .certificate-container {
            border: 5px solid #0a74da;
            padding: 40px;
            margin: 0 auto;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .title {
            font-size: 36px;
            font-weight: bold;
            color: #0a74da;
        }

        .subtitle {
            font-size: 24px;
            color: #555;
        }

        .content {
            margin-top: 20px;
            font-size: 18px;
        }

        .student-name {
            font-size: 28px;
            color: #0a74da;
            font-weight: bold;
        }

        .skill-list {
            margin-top: 30px;
            font-size: 16px;
        }

        .signature {
            margin-top: 50px;
            font-size: 16px;
            text-align: right;
        }

        .logo img {
            width: 120px;
        }

        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        .signature img {
            width: 100px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="certificate-container p-5">
            <!-- Logo Section -->
            <div class="logo">
                <img src="@($"{baseUrl}/images/logo.jpg")" alt="Pickleball Logo">
            </div>

            <!-- Title and Subtitle -->
            <div class="text-center">
                <div class="title">Certificate of Completion</div>
                <div class="subtitle">Pickleball Training Class</div>
            </div>

            <!-- Content Section -->
            <div class="content text-center">
                <p>This certifies that</p>
                <div class="student-name">@Model.StudentName</div>
                <p>has successfully completed the Pickleball Training Class</p>
                <p>on <strong>@Model.EvaluationDate.ToString("MMMM dd, yyyy")</strong></p>
                <p>under the guidance of <strong>@Model.CoachName</strong>.</p>
            </div>

            <!-- Skill Evaluation Section -->
            <div class="skill-list">
                <h5>Skills Evaluated:</h5>
                <ul class="list-group">
                    @foreach (var skillGrade in Model.SkillGrades)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @skillGrade.SkillName
                            <span class="badge bg-primary rounded-pill">@skillGrade.Grade</span>
                        </li>
                    }
                </ul>
            </div>

            <!-- Signature Section -->
            <div class="signature">
                <p>Signature: <strong>@Model.CoachName</strong></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
