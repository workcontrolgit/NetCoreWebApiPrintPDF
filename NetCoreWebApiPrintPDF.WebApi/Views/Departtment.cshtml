@model IEnumerable<NetCoreWebApiPrintPDF.Application.Features.Departments.Queries.GetDepartments.GetDepartmentsViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pickleball Certificate of Completion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .certificate-container {
            border: 5px solid #0a74da;
            padding: 40px;
            margin: 0 auto;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 36px;
            font-weight: bold;
            color: #0a74da;
        }

        .subtitle {
            font-size: 24px;
            color: #555;
        }

        .content {
            margin-top: 20px;
            font-size: 18px;
        }

        .student-name {
            font-size: 28px;
            color: #0a74da;
            font-weight: bold;
        }

        .skill-list {
            margin-top: 30px;
            font-size: 16px;
        }

        .signature {
            margin-top: 50px;
            font-size: 16px;
            text-align: right;
        }

        .logo img {
            width: 120px;
            margin-bottom: 20px;
        }

        .signature img {
            width: 100px;
        }
    </style>
</head>
<body class="bg-light">

<h2>Department List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
            </tr>
        }
        </tbody>
</table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
